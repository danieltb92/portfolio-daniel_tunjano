---
import { type HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"div"> {}

const { class: className, ...props } = Astro.props;
---

<theme-toggle class:list={["relative ml-1", className]} {...props}>
  <button
    type="button"
    class="theme-toggle-btn appearance-none border-none flex hover:scale-125 transition bg-transparent cursor-pointer text-gray-800 dark:text-gray-200"
    aria-label="Toggle theme"
  >
    <span class="sr-only">Elige el tema</span>
    <!-- Sun Icon -->
    <svg
      class="sun-icon theme-icon w-5 h-5 transition-all hidden"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path d="M12 12m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"></path>
      <path
        d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7"
      ></path>
    </svg>
    <!-- Moon Icon -->
    <svg
      class="moon-icon theme-icon w-5 h-5 transition-all hidden"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"
      ></path>
    </svg>
    <!-- System Icon -->
    <svg
      class="system-icon theme-icon w-5 h-5 transition-all hidden"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      stroke-width="2"
      stroke="currentColor"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
      <path
        d="M3 5a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v10a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1v-10z"
      ></path>
      <path d="M7 20h10"></path>
      <path d="M9 16v4"></path>
      <path d="M15 16v4"></path>
    </svg>
  </button>

  <!-- Dropdown Menu -->
  <div
    class="themes-menu absolute hidden top-8 right-0 text-sm p-1 min-w-[8rem] rounded-md border border-gray-100 bg-white/90 dark:bg-gray-900/90 dark:border-gray-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] backdrop-blur-md z-50"
  >
    <ul>
      <li
        class="themes-menu-option px-2 py-1.5 cursor-default hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm flex items-center gap-2"
        data-theme="light"
      >
        Light
      </li>
      <li
        class="themes-menu-option px-2 py-1.5 cursor-default hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm flex items-center gap-2"
        data-theme="dark"
      >
        Dark
      </li>
      <li
        class="themes-menu-option px-2 py-1.5 cursor-default hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm flex items-center gap-2"
        data-theme="system"
      >
        System
      </li>
    </ul>
  </div>
</theme-toggle>

<script>
  class ThemeToggle extends HTMLElement {
    constructor() {
      super();
      const button = this.querySelector(
        ".theme-toggle-btn"
      ) as HTMLButtonElement;
      const menu = this.querySelector(".themes-menu") as HTMLDivElement;
      const themeIcons = {
        light: this.querySelector(".sun-icon"),
        dark: this.querySelector(".moon-icon"),
        system: this.querySelector(".system-icon"),
      };

      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return "system";
      };

      const updateIcon = (theme: string) => {
        Object.values(themeIcons).forEach((icon) => {
          icon?.classList.add("hidden");
        });
        // @ts-ignore
        themeIcons[theme]?.classList.remove("hidden");
      };

      const updateTheme = () => {
        const theme = getThemePreference();
        const isDark =
          theme === "dark" ||
          (theme === "system" &&
            window.matchMedia("(prefers-color-scheme: dark)").matches);

        // @ts-ignore
        updateIcon(theme);
        document.documentElement.setAttribute(
          "data-theme",
          isDark ? "dark" : "light"
        );

        if (isDark) {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }

        // Update menu selection
        this.querySelectorAll(".themes-menu-option").forEach((el) => {
          const optionTheme = el.getAttribute("data-theme");
          if (optionTheme === theme) {
            el.classList.add(
              "bg-blue-100",
              "dark:bg-blue-900/30",
              "text-blue-600",
              "dark:text-blue-400",
              "font-medium"
            );
          } else {
            el.classList.remove(
              "bg-blue-100",
              "dark:bg-blue-900/30",
              "text-blue-600",
              "dark:text-blue-400",
              "font-medium"
            );
          }
        });
      };

      // Initial update
      updateTheme();

      // Toggle Menu
      button.addEventListener("click", (e) => {
        e.stopPropagation();
        menu.classList.toggle("hidden");
      });

      // Close menu when clicking outside
      document.addEventListener("click", (e) => {
        if (
          !menu.classList.contains("hidden") &&
          !this.contains(e.target as Node)
        ) {
          menu.classList.add("hidden");
        }
      });

      // Handle Theme Selection
      this.querySelectorAll(".themes-menu-option").forEach((element) => {
        element.addEventListener("click", (e) => {
          const selectedTheme = (e.currentTarget as HTMLElement).getAttribute(
            "data-theme"
          );
          if (selectedTheme) {
            localStorage.setItem("theme", selectedTheme);
            updateTheme();
            menu.classList.add("hidden");
          }
        });
      });

      // Listen for system changes
      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", updateTheme);
    }
  }

  customElements.define("theme-toggle", ThemeToggle);
</script>

<style>
  .themes-menu {
    animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }

  @keyframes scale-up-center {
    0% {
      transform: scale(0.5);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }
</style>
