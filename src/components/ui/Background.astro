<div
  class="pointer-events-none absolute inset-0 -z-10 flex items-center justify-center overflow-visible"
>
  <div class="blob-wrapper">
    <div class="blob"></div>
  </div>

  <style>
    /* Wrapper que mantiene el espacio y evita que se salga */
    .blob-wrapper {
      position: relative;
      width: clamp(350px, 45vw, 750px);
      height: clamp(350px, 45vw, 750px);
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: visible;
    }

    /* Animaci√≥n del blob */
    @keyframes rotate {
      0% { transform: rotate(0deg) scale(1); }
      100% { transform: rotate(360deg) scale(1.2); }
    }

    .blob {
      width: 100%;
      height: 100%;
      filter: blur(120px);
      background-image: linear-gradient(hsl(222, 84%, 60%), hsl(164, 79%, 71%));
      animation: rotate 12s cubic-bezier(0.8, 0.2, 0.2, 0.8) infinite;
      border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
      opacity: 0.45;
      transform-origin: center;
    }
  </style>
</div>

