---
import { profile } from "../../data/data.json";
import { useTranslations } from "@/i18n/utils";
import { languageList } from "@/i18n/ui";
import Danieltb from "public/Danieltb.svg";

// i18n Obtener el idioma actual y la función de traducción
const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<footer
  id="contact"
  class="w-full justify-between overflow-hidden min-h-[400px] sm:min-h-[500px] md:min-h-[500px] flex justify-items-start items-center flex-col p-4 mt-20"
>
  <div
    class="max-w-[1728px] w-full flex flex-col md:flex-row justify-between items-start px-4 gap-10"
  >
    <p class="text-xl font-extralight">
      <b>{translateLabels("footer.titleList")}</b>
    </p>
    <ul
      class="flex flex-col md:flex-row list-none gap-2 md:gap-7 items-start font-light text-sm"
    >
      <li>
        <a href={`mailto:${profile.email}`} class="hover:border-b">Email</a>
      </li>
      <li>
        <a
          href={profile.social.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:border-b">LinkedIn</a
        >
      </li>
      <li>
        <a
          href={`https://wa.me/${profile.phone}`}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:border-b">WhatsApp</a
        >
      </li>
      <li>
        <a href={`tel:${profile.phone}`} class="hover:border-b">Teléfono</a>
      </li>
      <li>
        <a
          href={profile.social.github}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:border-b">GitHub</a
        >
      </li>
    </ul>
  </div>
  <div class="max-w-[1728px] w-full items-center py-10 m-auto">
    <Danieltb class="w-full text-gray-400 dark:text-white" />
  </div>
  <div
    class="bottom-[0px] flex justify-center flex-col items-center p-4 pb-0 z-10"
  >
    <div class="md:max-w-5xl text-center py-4 text-gray-400 text-sm">
      &copy; {new Date().getFullYear()}
      {translateLabels("footer.text")}
      <span class="underline"
        ><a href={profile.social.linkedin}>{profile.name}</a></span
      >. {translateLabels("footer.textRight")}
    </div>
  </div>

  <!-- <h1
    class="absolute bottom-[3rem] sm:bottom-[2rem] md:bottom-[2rem] lg:bottom-[2rem] left-1/2 transform -translate-x-1/2
               text-[4rem] sm:text-[8rem] md:text-[12rem] lg:text-[18rem]
               whitespace-nowrap font-bold opacity-[0.3]
               text-gray-200 dark:text-gray-400
               select-none pointer-events-none
               tracking-tighter"
  >
    {translateLabels("footer.title")}
  </h1> -->
</footer>
