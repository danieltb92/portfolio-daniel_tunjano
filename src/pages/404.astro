---
import Layout from "../layouts/Layout.astro";
import Button from "../components/ui/Button.astro";
import Background from "@/components/ui/Background.astro";
import Img404 from "public/404.svg";
---

<Layout title="404 - Página no encontrada">
  <main
    class="relative flex flex-col items-center justify-center min-h-[calc(100vh-64px)] px-4 overflow-hidden"
  >
    <div class="absolute inset-0 w-full h-full">
      <Background />
    </div>

    <div
      class="relative z-10 flex flex-col items-center text-center max-w-3xl mx-auto space-y-8 animate-fade-in"
    >
      <!-- <img
        src={Img404.src}
        alt="Ilustración de página no encontrada"
        class="w-full max-w-md h-auto drop-shadow-xl hover:scale-105 transition-transform duration-500"
      /> -->

      <div class="space-y-4">
        <h1
          class="text-6xl md:text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-teal-500 dark:from-blue-400 dark:to-teal-300"
        >
          404
        </h1>
        <h2
          class="text-2xl md:text-4xl font-bold text-gray-900 dark:text-white"
        >
          ¡Ups! Algo salió mal
        </h2>
        <p
          class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-lg mx-auto leading-relaxed"
        >
          Parece que la página que buscas se ha perdido en el ciberespacio o
          nunca existió.
        </p>
      </div>

      <div class="pt-4">
        <Button
          href="/"
          variant="primary"
          size="lg"
          class="shadow-lg hover:shadow-blue-500/30 transition-all duration-300"
        >
          <span slot="icon-left" class="mr-2">←</span>
          Volver al inicio
        </Button>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { gsap } from "gsap";

  const init404Animation = () => {
    const main = document.querySelector("main");
    if (!main) return;

    // Use a bounce effect for the 404 title
    const title = main.querySelector("h1");
    const subtitle = main.querySelector("h2");
    const text = main.querySelector("p");
    const button = main.querySelector("a"); // Button renders as 'a' usually

    const tl = gsap.timeline();

    if (title) {
      tl.from(title, {
        scale: 0,
        rotation: -10,
        opacity: 0,
        duration: 0.8,
        ease: "back.out(1.7)",
      });
    }

    if (subtitle) {
      tl.from(
        subtitle,
        {
          y: 20,
          opacity: 0,
          duration: 0.5,
          ease: "power2.out",
        },
        "-=0.4"
      );
    }

    if (text) {
      tl.from(
        text,
        {
          y: 20,
          opacity: 0,
          duration: 0.5,
          ease: "power2.out",
        },
        "-=0.3"
      );
    }

    if (button) {
      tl.from(
        button,
        {
          y: 20,
          opacity: 0,
          duration: 0.5,
          ease: "power2.out",
        },
        "-=0.3"
      );
    }
  };

  init404Animation();
  document.addEventListener("astro:after-swap", init404Animation);
</script>
